#!/usr/bin/perl -w
use lib("$ENV{'Home120Proof'}/Perl");
use One20Proof;

my $HOME=$ENV{One20Home};
-d $HOME or die "$!: $HOME";

my $TIME=scalar(localtime());
print  "$TIME\nStopping WillPad\n";

## Programmes to use
my $pd='pd';
my $lpx_scale='lpx_scale';

## Kill these if they exist
One20Proof::pkill($pd);
One20Proof::pkill($lpx_scale);
print "Killed $lpx_scale: ";
print `pgrep lpx_scale` ? "True\n" : "False\n";


